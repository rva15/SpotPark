<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>       <!-- used for action bar -->
        <item name="colorPrimaryDark">@color/statusbarcolor</item> <!-- used for status bar -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/newuiorange</item>
        <item name="tabIndicatorColor">@color/newuiorange</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/newuiorange</item>
    </style>

    <style name="iconGenText">
        <item name="android:textColor">#FFFFFF</item>
    </style>



</resources>
