<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="CHECK-IN SAVED"
                android:gravity="center"
                android:layout_margin="16dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mapimage"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="\u25CF "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/remindertv"
                    android:text="A reminder will be sent to you at "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/expirytime"
                    android:textColor="@color/tab_background_selected"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="\u25CF "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can delete this CheckIn from the drop down menu at the top right corner of the screen"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="\u25CF "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/earnmore"/>

            </LinearLayout>



        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/black" />

        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/carlocadView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adUnitId="@string/postcheckin_ad_unit_id"
            ads:adSize="360x100">
        </com.google.android.gms.ads.NativeExpressAdView>
    </LinearLayout>

</RelativeLayout>
